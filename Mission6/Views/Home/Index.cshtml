@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Navigation Page</title>
    <style>
        /* Basic styling for the navigation page */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        header {
            background-color: #333;
            color: white;
            padding: 15px;
            text-align: center;
        }

        nav {
            background-color: #444;
            overflow: hidden;
        }

            nav a {
                display: inline-block;
                color: white;
                padding: 14px 20px;
                text-align: center;
                text-decoration: none;
            }

                nav a:hover {
                    background-color: #ddd;
                    color: black;
                }

        .content {
            padding: 20px;
        }

        footer {
            background-color: #333;
            color: white;
            text-align: center;
            padding: 10px;
            position: fixed;
            width: 100%;
            bottom: 0;
        }
    </style>
</head>
<body>

    <!-- Header Section -->
    <header>
        <h1>Welcome to My Navigation Page</h1>
    </header>

    <!-- Navigation Section -->
    <nav>
        <a asp-area="" asp-controller="Home" asp-action="Home" >Home</a>
        <a asp-area="" asp-controller="Home" asp-action="GTKJoel">About Joel</a>
        <a asp-area="" asp-controller="Home" asp-action="DataEntry">Enter Movies</a>
    </nav>

    <!-- Content Section -->
    <div class="content">
        <h2>Home</h2>
        <p>This is the navigation page.</p>

    </div>

    <!-- Footer Section -->
    <footer>
        <p>&copy; 2025 Mission 6</p>
    </footer>

</body>
</html>
