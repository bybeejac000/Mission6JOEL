@model List<Form>

<table border="1" class="table table-bordered">
    <thead class="fw-bold">
        <tr>
            <td>Title</td>
            <td>Genre</td>
            <td>Release Year</td>
            <td>Rating</td>
            <td>Edited</td>
            <td>Lent To</td>
            <td>Notes</td>
            <td>Director</td>
            <td>Delete</td>
            <td>Edit</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.Title</td>
                <td>@x.Year</td>
                <td>@x.Director</td>
                <td>@x.Rating</td>
                <td>@x.Edited</td>
                <td>@x.LentTo</td>
                <td>@x.Notes</td>
                <td>@x.Director</td>
                <td>
                    <form asp-action="Delete" asp-controller="Home" method="POST" asp-route-id="@x.MovieId">
                    <button type="submit">Delete</button>
                    </form>
                </td>
                <td>
                    <form asp-action="Edit" asp-controller="Home" method="GET" asp-route-id="@x.MovieId">
                        <button type="submit">Edit</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
